<?xml version="1.0" encoding="utf-8"?>
<com.mikehelland.omgtechnogauntlet.SlidingFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <Button android:text="Return To Jam"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@android:drawable/ic_media_ff"
        android:id="@+id/return_to_omg_bananas"
        android:layout_alignParentTop="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start A Blank Jam"
        android:id="@+id/blank_jam_button"
        android:layout_below="@id/return_to_omg_bananas"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load Jam From URL"
        android:id="@+id/load_jam_from_url_button"
        android:layout_below="@id/blank_jam_button"/>

    <!--<Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bluetooth Jam"/>-->

    <TextView
        android:text="Or Load A Saved Jam"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_below="@id/load_jam_from_url_button"
        android:id="@+id/load_jam_caption"
        />

    <Button android:text="Exit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_media_rew"
        android:id="@+id/exit_button"
        android:layout_alignParentBottom="true"/>


    <ListView android:id="@+id/saved_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:listSelector="#6666FF"
        android:layout_below="@id/load_jam_caption"
        android:layout_above="@id/exit_button"
        />


</com.mikehelland.omgtechnogauntlet.SlidingFrameLayout>

