<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="0dip"
              android:layout_weight="1"
              android:background="@drawable/back"
              android:padding="8dip"
              android:layout_margin="5dip"
              android:gravity="center_vertical">


    <ImageView
        android:src="@drawable/icon48"
        android:layout_height="48dip"
        android:layout_width="wrap_content"
        android:id="@+id/libeniz_head"
        android:layout_alignParentLeft="true">
        <!--android:layout_toLeftOf="@id/mute_button"
        android:layout_marginRight="8dip">-->

    </ImageView>


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/libeniz_head"
            android:text="Name"
            android:id="@+id/track_button"
            android:background="#888888"
            />
       <!--     android:background="?android:attr/selectableItemBackground"-->


    <Button android:layout_width="48dip"
            android:layout_height="48dip"
            android:id="@+id/mute_button"
            android:text="M"
            android:layout_alignParentRight="true"
            android:textColor="#FFFFFFFF"
            android:background="#FF00FF00"
            />

    <ImageButton android:layout_width="48dip"
        android:layout_height="48dip"
        android:id="@+id/open_fretboard_button"
        android:text=""
        android:layout_toLeftOf="@id/mute_button"
        android:textColor="#FFFFFFFF"
        android:src="@drawable/fretboard"
        />


</RelativeLayout>